@model IEnumerable<wayni_prueba.Domain.Entities.User>

@{
    Layout = "_Layout";
}

<h2>Users</h2>
<table>
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>DNI</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.DNI</td>
            <td>
                <a href="@Url.Action("Details", new { id = user.Id })">Details</a> |
                <a href="@Url.Action("Edit", new { id = user.Id })">Edit</a> |
                <a href="@Url.Action("Delete", new { id = user.Id })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a href="@Url.Action("Create")" class="btn-primary">Create New User</a>